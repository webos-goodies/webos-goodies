<style>
  table { width:100%; }
  th { text-align: left; }
</style>

<h1>Listing categories</h1>

<table style="width: 100%;">
  <tr>
    <th>タグ</th>
    <th>タイトル</th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%=h category.name %></td>
    <td><%= link_to category.title, site_category_path(@site.id, category.id) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New category', new_site_category_path(@site.id) %>
