<% content_for :title, @article.full_title -%>

<% content_for :head do -%>
<link rel="stylesheet" href="<%= h(@site.full_url('/template/articles.css')) %>" type="text/css" />
<script type="text/javascript" src="http://www.google.com/jsapi"></script>
<script type="text/javascript">
  google.load("visualization", "1");
  google.setOnLoadCallback(function() {
    template.renderComments('<%= @article.page_name %>');
    template.renderTrackbacks('<%= @article.page_name %>');
  });
</script>
<% end -%>

<% content_for :bottom do -%>
<script type="text/javascript">
function tplRegistCategory(json)
{
  var f = template.generateRelatedLinks(json, '<%= @site.url %>');
  document.getElementById('tpl_related').appendChild(f);
}
</script>
<% @article.meta.strip.split(',').each do |tag| -%>
<script type="text/javascript" charset="UTF-8" src="<%= h(@site.full_url('/categories/jsonp/', u(tag.strip) + '.js')) %>"></script>
<% end -%>
<% end -%>

<div class="article">

<div class="article_head"><h1 class="title"><%= h(@article.title) %></h1></div>
<div class="tpl_share_buttons">
  <a class="tpl_tweet_button" target="blank_" href="http://twitter.com/home/?status=<%= h(u(@article.full_title)) %>%20<%= h(u(@article.short_url)) %>"></a>
  <iframe src="http://www.facebook.com/plugins/like.php?href=<%= h(u(@article.url)) %>&amp;layout=standard&amp;show_faces=false&amp;width=300&amp;action=like&amp;colorscheme=light" scrolling="no" frameborder="0" allowTransparency="true" style="border:none; overflow:hidden; width:300px; height:24px"></iframe>
</div>

<div class="article_body"><%= @article.formatted_body1 %></div>
<div style="clear:both; height:0px;"></div>
<% unless @article.formatted_body2.empty? -%>
<div class="article_body"><%= @article.formatted_body2 %></div>
<% end -%>

</div>

<% unless @article.meta.strip.split(',').empty? -%>
<fieldset id="tpl_relatedframe">
<legend>関連記事</legend>
<div id="tpl_related">
</div>
</fieldset>
<% end -%>

<div class="article_footer">

<%= @article.publish_date.to_time.strftime('%Y年%m月%d日 %H:%M') %>
| <a href="#comments">Comments(<span id="tpl_num_comments"></span>)</a>
| <a href="#trackback">TrackBack(<span id="tpl_num_trackbacks"></span>)</a>
|

<%- "livedoor clip" -%>
<a href="http://clip.livedoor.com/redirect?link=<%= h(u(@article.url)) %>&title=<%= h(u(@article.full_title)) %>&ie=utf8" class="ldclip-redirect" title="livedoor clip! でブックマーク"><img src="<%= h(@site.full_url('/template/imgs/bookmark/livedoorclip.gif')) %>" width="16" height="16" alt="[livedoor clip!]" style="border: none;vertical-align: middle;" /></a>

<%- "はてなブックマーク" -%>
<a href="http://b.hatena.ne.jp/entry/<%= h(@article.url) %>" title="はてなブックマークでブックマーク"><img src="<%= h(@site.full_url('/template/imgs/bookmark/hatena.gif')) %>" width="16" height="12" style="border: none; vertical-align:middle;" alt="[はてなブックマーク]" /></a>

<%- "Delicious" -%>
<a href="http://delicious.com/save" onclick="window.open('http://delicious.com/save?v=5&noui&jump=close&url='+encodeURIComponent('<%= @article.url %>')+'&title='+encodeURIComponent('<%= @article.full_title %>'), 'delicious','toolbar=no,width=550,height=550'); return false;" title="delicious でブックマーク"><img src="<%= h(@site.full_url('/template/imgs/bookmark/delicious.gif')) %>" width="10" height="10" style="border: none; vertical-align:middle;" alt="[del.icio.us]" /></a>

</div>

<div class="trackback">
<h1>トラックバックURL</h1>
<div class="trackback_form">
<!-- <input type="text" value="$ArticleTrackBackUrl$" /> -->
<div class="notice">※システムの都合によりトラックバックの受け付けは中止しております。</div>
</div>
<a name="trackback"></a>
<div id="tpl_trackbacks"></div>
</div>

<div class="comment">
<a name="comments"></a>
<div id="tpl_comments"></div>
<h1>この記事にコメントする</h1>
<div id="comment_form">
<form action="https://spreadsheets.google.com/formResponse?key=pMIBrnJ4PHK_Tnb_IAz3cT&#81;" method="POST" name="comment_form" target="_blank">
<input type="hidden" name="entry.0.single" value="<%= h(@article.page_name) %>" />
<input type="hidden" name="entry.1.single" value="<%= h(@article.title) %>" />
<div class="with_label"><label for="author">名前</label><input id="author" name="entry.2.single" /></div>
<div class="with_label"><label for="url">URL</label><input id="url" name="entry.3.single" /></div>
<div class="no_label">
  <div><textarea name="entry.4.single" rows="10" cols="50"></textarea></div>
  <input type="hidden" name="pageNumber" value="0">
  <input type="hidden" name="backupCache" value="">
  <div class="submit"><input type="submit" name="submit" value=" 投稿する " class="button"></div>
</div>
</form>
</div>
</div>

<%- "Google Code Prettify" -%>

<% if @article.prettify? -%>
  <style type="text/css">@import url("http://webos-goodies.jp/template/scripts/prettify.css");</style>
  <script type="text/javascript" src="http://webos-goodies.jp/template/scripts/prettify.js"></script>
  <script type="text/javascript">template.addWindowEvent('load', function() { prettyPrint(); });</script>
<% end -%>
