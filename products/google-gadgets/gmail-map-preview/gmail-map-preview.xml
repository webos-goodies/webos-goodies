<?xml version="1.0" encoding="UTF-8"?>
<Module>
  <ModulePrefs title="Gmail Map Preview"
			   description="Show previews of links to Google Maps."
			   height="120"
			   author="WebOS Goodies"
			   author_email="support@webos-goodies.jp"
			   author_location="Tokyo, Japan">
    <Require feature="dynamic-height"/>
	<!-- 使用するExtractorのリスト -->
    <Require feature="google.contentmatch">
      <Param name="extractors">google.com:EmailBodyExtractor</Param>
    </Require>
  </ModulePrefs>

  <!-- type="html", view="card" に固定 -->
  <Content type="html" view="card">
