<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs title="Your App Name">
    <Require feature="rpc"/>
    <Require feature="views"/>
  </ModulePrefs>
  <Content type="html">
    <![CDATA[
<!DOCTYPE html>

<style>
  body { position:absolute; left:0px; top:0px; width:100%; height:100%; }
  #wrap { width:100%; height:100%; overflow:auto }
</style>

<div id="wrap">

  <h1>Sample Hangout App</h1>

  <h2>基本機能</h2>
  <p>
    Hangout ID : <span id="hangout-id"></span><br/>
    Locale : <span id="locale"></span><br/>
    Participant ID : <span id="participant-id"></span><br/>
  </p>
  <p><button id="hide-app">アプリケーションを隠す</button></p>

  <h2>参加者情報</h2>
  <ul id="participants"></ul>

  <h2>アプリケーションをインストールしている参加者</h2>
  <ul id="app-participants"></ul>

  <h2>通知</h2>
  <p><a id="notice" href="javascript:void(0);">Notificationを表示・削除</a></p>

  <h2>アクティブスピーカーの取得・変更</h2>
  <p>現在のActive Speaker : <span id="current-speaker"></span></p>
  <p id="active-speaker"></p>

  <h2>AV 機器の状態取得</h2>
  <p>
    カメラ : <span id="camera-status"></span><br>
    マイク : <span id="microphone-status"></span><br>
    スピーカー : <span id="speakers-status"></span>
  </p>

  <h2>AV 機器の入力の制御</h2>
  <p><button id="emergency">エマージェンシーボタン</button></p>

  <h2>参加者のマイクボリューム</h2>
  <ul id="volume"></ul>

  <h2>へぇーボタン</h2>
  <p><button id="countup">へぇー</button></p>
  <ul id="count"></ul>

</div>

<script src="//hangoutsapi.appspot.com/static/hangout.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>
<script src="http://dl.dropbox.com/u/327/hangout.js"></script>
    ]]>
  </Content>
</Module>
